<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <!-- 外圈阴影 -->
            <item>
                <shape android:shape="oval">
                    <solid android:color="#20000000" />
                    <size android:width="36dp" android:height="36dp" />
                </shape>
            </item>
            <!-- 内圈主色 -->
            <item android:left="6dp" android:top="6dp" android:right="6dp" android:bottom="6dp">
                <shape android:shape="oval">
                    <solid android:color="#33B5E5" />
                    <size android:width="24dp" android:height="24dp" />
                </shape>
            </item>
            <!-- 中心高光 -->
            <item android:left="10dp" android:top="10dp" android:right="10dp" android:bottom="10dp">
                <shape android:shape="oval">
                    <solid android:color="#80FFFFFF" />
                    <size android:width="16dp" android:height="16dp" />
                </shape>
            </item>
        </layer-list>
    </item>

    <item android:state_focused="true">
        <layer-list>
            <!-- 外圈阴影 -->
            <item>
                <shape android:shape="oval">
                    <solid android:color="#10000000" />
                    <size android:width="36dp" android:height="36dp" />
                </shape>
            </item>
            <!-- 内圈主色 -->
            <item android:left="6dp" android:top="6dp" android:right="6dp" android:bottom="6dp">
                <shape android:shape="oval">
                    <solid android:color="#33B5E5" />
                    <size android:width="24dp" android:height="24dp" />
                </shape>
            </item>
            <!-- 中心高光 -->
            <item android:left="10dp" android:top="10dp" android:right="10dp" android:bottom="10dp">
                <shape android:shape="oval">
                    <solid android:color="#80FFFFFF" />
                    <size android:width="16dp" android:height="16dp" />
                </shape>
            </item>
        </layer-list>
    </item>

    <!-- 默认状态 -->
    <item>
        <layer-list>
            <!-- 外圈阴影 -->
            <item>
                <shape android:shape="oval">
                    <solid android:color="#10000000" />
                    <size android:width="32dp" android:height="32dp" />
                </shape>
            </item>
            <!-- 内圈主色 -->
            <item android:left="4dp" android:top="4dp" android:right="4dp" android:bottom="4dp">
                <shape android:shape="oval">
                    <solid android:color="#33B5E5" />
                    <size android:width="24dp" android:height="24dp" />
                </shape>
            </item>
            <!-- 中心高光 -->
            <item android:left="8dp" android:top="8dp" android:right="8dp" android:bottom="8dp">
                <shape android:shape="oval">
                    <solid android:color="#80FFFFFF" />
                    <size android:width="16dp" android:height="16dp" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>